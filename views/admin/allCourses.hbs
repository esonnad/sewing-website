<div class="page-title">
  <h1 class="page-title">Admin - All Courses</h1>
</div>
<h1>Here you can see and edit all courses. this page is only accessible by admin</h1>
<br>
<div class="card" style="width: 30rem;">
  <div class="card-body">
    <h2><a href="/admin/courses/add">Add a new course</a></h2>
  </div>
</div>

<div class="card" style="width: 80rem;">
  <h2>Active Courses</h2>
  <div class="card-body">
    <table class="table">
      <tr>
        <th>Name</th>
        <th>Teacher</th>
        <th>Students</th>
        <th>Dates</th>
        <th>Delete? </th>
      </tr>
      {{#each activeCourses}}
      <tr>
        <td><a href="/admin/courses/details/{{this._id}}">{{this.name}}</a></td>
        <td>{{this.teacher}}</td>
        <td>{{this._students}}</td>
        <td>{{this.dates.length}}</td>
        <td><a href="/admin/courses/delete/{{this._id}}" onclick="return confirm('Are you sure you want to delete this course?');">Delete</a></td>
      </tr>
      {{/each}}
    </table>
  </div>
</div>

<br>

