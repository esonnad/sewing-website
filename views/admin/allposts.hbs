<div class="page-title">
  <h1 class="page-title">Admin - Alle Posts</h1>
</div>
<div class="manage-container">
<div class="card" style="width: 30rem;">
  <div class="card-body">
    <h2><a href="/admin/postAdmin" class="btnHref">Neuen Post erstellen</a></h2>
  </div>
</div>
</div>
<div class="manage-container">
<div class="card" style="width: 30rem;">
  <div class="card-body">
    <h2>Alle öffentlichen Posts:</h2>
  </div>
</div>
</div>
<p>
  <section class="card-container">
  {{#each activePosts}}
    <div class="card" style="width: 30rem;">
      {{#if this.imgPath}}
      <img src="{{ this.imgPath }}" alt="{{ this.imgName }}" class="card-img-top" />
      {{/if}}
      <div class="card-body">
        <h5 class="card-title">{{this.header}}</h5>
        <p class="card-text">{{this.content}}</p>
        <h6 class="card-subtitle mb-2 text-muted">by {{this._creator.name}}</h6>
        <a class="btnHref" href="/admin/allPosts/delete/{{this._id}}" onclick="return confirm('Are you sure you want to delete this active posts?');">Löschen</a>
        <a class="btnHref" href="/admin/allPosts/edit/{{this._id}}">Bearbeiten</a>
      </div>
    </div>
  {{/each}}
  </section>
</p>
<div class="manage-container">
<div class="card" style="width: 30rem;">
  <div class="card-body">
    <h2>Alle unbestätigten Posts:</h2>
  </div>
</div>
</div>
<p>
  <section class="card-container">
  {{#each pendingPosts}}
    <div class="card" style="width: 30rem;">
      {{#if this.imgPath}}
      <img src="{{ this.imgPath }}" alt="{{ this.imgName }}" class="card-img-top" />
      {{/if}}
      <div class="card-body">
        <h5 class="card-title">{{this.header}}</h5>
        <p class="card-text">{{this.content}}</p>
        <h6 class="card-subtitle mb-2 text-muted">by {{this._creator.name}}</h6>
        <a href="/admin/allPosts/delete/{{this._id}}" class="btnHref" onclick="return confirm('Are you sure you want to delete this pending post?');">Löschen</a>
        <a href="/admin/confirmPost/{{this._id}}" class="btnHref">Veröffentlichung bestätigen</a>
      </div>
    </div>
  {{/each}}
  </section>
</p>  