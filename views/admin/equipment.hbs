<div class="page-title">
  <h1 class="page-title">Admin - Ausstattung</h1>
</div>
<section class="card-container">
  <div class="card" style="width: 45rem;">
      <div class="card-body">
        <p><a href="/admin/equipment/new">Füge eine neue hinzu</a></p>
      </div>
    </div>
</section>
<section class="card-container">
  <p>
    {{#each equipment}}
    <div class="card" style="width: 30rem;">
      {{#if this.imgPath}}
      <img src="{{ this.imgPath }}" alt="{{ this.imgName }}" class="card-img-top" />
      {{/if}}
      <div class="card-body">
        <h5 class="card-title">{{this.header}}</h5>
        <p class="card-text">{{this.content}}</p>
        <button class="btnAll btn2"><a href="/admin/equipment/delete/{{this._id}}" onclick="return confirm('Are you sure you want to delete this eqipment?');">Löschen</a></button>
      </div>
    </div>
    {{/each}}
  </p>
</section>