<div class="page-title">
  <h1 class="page-title">Admin - Equipment</h1>
</div>
<h1>All Equipment</h1>
<p><a href="/admin/equipment/new">Add a new one</a></p>
<p>
  {{#each equipment}}
  <div class="card" style="width: 30rem;">
    {{#if this.imgPath}}
    <img src="{{ this.imgPath }}" alt="{{ this.imgName }}" class="card-img-top" />
    {{/if}}
    <div class="card-body">
      <h5 class="card-title">{{this.header}}</h5>
      <p class="card-text">{{this.content}}</p>
      <a href="/admin/equipment/delete/{{this._id}}" onclick="return confirm('Are you sure you want to delete this eqipment?');">Delete</a>
    </div>
  </div>
  {{/each}}
</p>