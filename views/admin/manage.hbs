<div class="page-title">
  <h1 class="page-title">Manage next cohort page</h1>
</div>
<br>
<div class="manage-container">
<h1>Requests</h1>
</div>

<div class="manage-container">
  <div class="card" style="width: 80rem;">

<table style="width:100%" class="table">
  <tr>
    <th>Student Name</th>
    <th>Delete Request <br>(will refresh page)</th>
    <th>Choice 1</th>
    <th>Choice 2</th>
    <th>Choice 3</th>
  </tr>
  {{#each requests}}
  <tr>
    <td>{{this._user.name}}</td>
    <form action="/admin/request/delete/{{this._id}}" method="POST">
      <td><button action="submit" class="btnAll btn2 delete-btn">Delete</button></td>
    </form>
    {{#each this._preferences}}
    <td>{{this.name}}</td>
    {{/each}}
  </tr>
  {{/each}}
</table>
<br><br><br>
  </div>
</div>

<form action="/admin/generate-enrollment" method="POST">
<div class="manage-container">
  <button class="btnAll btn2" action="submit">Generate Suggested Enrollment</button>
</div>
</form>



<div class="manage-container">
<div class="card" style="width: 80rem">
<table style="width:100%" class="table">
  <tr>
    {{#each suggestion}}
    <th>{{@key}}</th>
    {{/each}}
  </tr>
  <tr>
    <form action="/admin/enroll" method="POST">

      {{#each suggestion}}

      <td>
        {{#each this.students}}
        <input name="{{../this.id}}" class="tags" type="text" value="{{this.name}}, {{this.id}}">

        <br>
        {{/each}}
      </td>

      {{/each}}
      <br>
      <button class="btnAll btn2" action="submit">Confirm Enrollment</button>
      <br>

      
    </form>

  </tr>

  
</table>
</div>
</div>

<div class="manage-container">
<div class="card" style="width: 80rem;">
<h3>Remaining Students:</h3>
      {{#each waitlist}}
        {{this.name}}
        <br>
      {{/each}}
</div>
</div>





