<div class="page-title">
  <h1 class="page-title">Manage next cohort page</h1>
</div>
<br>
<div id="request-title">
<h1>Requests</h1>
</div>

<div id="request-card-container">
<div class="card" style="width: 80rem;">

<table style="width:100%" class="table">
  <tr>
    <th>Student Name</th>
    <th>Delete Request <br>(will refresh page)</th>
    <th>Choice 1</th>
    <th>Choice 2</th>
    <th>Choice 3</th>
  </tr>
  {{#each requests}}
  <tr>
    <td>{{this._user.name}}</td>
    <form action="/admin/request/delete/{{this._id}}" method="POST">
      <td><button action="submit" class="btnAll btn2 delete-btn">Delete</button></td>
    </form>
    {{#each this._preferences}}
    <td>{{this.name}}</td>
    {{/each}}
  </tr>
  {{/each}}
</table>
<br><br><br>

</div>
</div>
<h1>Enrollment</h1>


<form action="/admin/generate-enrollment" method="POST">
  <button action="submit">Generate Suggested Enrollment</button>
</form>

<table style="width:100%" class="table">
  <tr>
    {{#each suggestion}}
    <th>{{@key}}</th>
    {{/each}}
  </tr>
  <tr>
    <form action="/admin/enroll" method="POST">

      {{#each suggestion}}

      <td>
        {{#each this.students}}
        <input name="{{../this.id}}" class="tags" type="text" value="{{this.name}}, {{this.id}}">

        <br>
        {{/each}}
      </td>

      {{/each}}
      <button action="submit">Confirm Enrollment</button>
    </form>



  </tr>
</table>

<h1>Remaining Students</h1>
{{#each waitlist}}
{{this.name}}
{{/each}}



