<div class="page-title">
  <h1 class="page-title">Admin - Alle Schüler</h1>
</div>

<section class="card-container">
  <p>
    <div class="card" style="width: 30rem;">
      <div class="card-body">
        <a href="/auth/signup">Füge einen neuen Schüler hinzu</a>
      </div>
    </div>
    <div class="card" style="width: 80rem;">
      <div class="card-body">
        <h2>Aktive Schüler</h2>
        <ul>
          {{#each activeStudents}}
          <li>{{this.name}}, (Email: {{this.email}}, Telefon: {{this.phone}}),
            {{#if this.adress}}
            Adresse: {{this.adress}},
            {{/if}}
            <a href="/admin/students/edit/{{this._id}}">Bearbeiten, </a>
            <a href="/admin/students/delete/{{this._id}}" onclick="return confirm('Sicher, dass du diesen Schüler löschen möchtest?');">Löschen</a></li>
          {{/each}}
        </ul>
      </div>
    </div>
    <div class="card" style="width: 80rem;">
      <div class="card-body">
        <h2>Nicht aktive Schüler</h2>
        <ul>
          {{#each pendingStudents}}
          <li>{{this.name}}, (Email: {{this.email}}, Telefon: {{this.phone}}),
            {{#if this.adress}}
            Adresse: {{this.adress}},
            {{/if}}
            <a href="/admin/students/delete/{{this._id}}" onclick="return confirm('Sicher, dass du diesen Schüler löschen möchtest?');">Löschen</a></li>
          {{/each}}
        </ul>
      </div>
    </div>
  </p>
</section>