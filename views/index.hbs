<div class="page-title">
  <h1 class="page-title">Willkommen</h1>
</div>
<p>

  <section class="card-container">

    {{#each posts}}

    <div class="card" style="width: 30rem;">
      {{#if this.imgPath}}
      <img src="{{ this.imgPath }}" alt="{{ this.imgName }}" class="card-img-top" />
      {{/if}}
      <div class="card-body">
        <h5 class="card-title">{{this.header}}</h5>
        <p class="card-text">{{this.content}}</p>
        <h6 class="card-subtitle mb-2 text-muted">by {{this._creator.name}}</h6>
      </div>
    </div>
    {{/each}}

    <section class="card-container">

      <a href="/seeAllPosts">See all posts</a>
</p>