<div class="page-title">
  <h1 class="page-title">Willkommen</h1>
</div>
<p>

  <section class="card-container">

    {{#each posts}}

    <div class="card" style="width: 30rem;">
      {{#if this.imgPath}}
      <img src="{{ this.imgPath }}" alt="{{ this.imgName }}" class="card-img-top" />
      {{/if}}
      <div class="card-body">
        <h5 class="card-title">{{this.header}}</h5>
        <p class="card-text">{{this.content}}</p>
        <h6 class="card-subtitle mb-2 text-muted">by {{this._creator.name}}</h6>
      </div>
    </div>
    {{/each}}

  </section>
  <section class="button-container"> 
    <a href="/seeAllPosts" class="btnHref" id="all-posts">Alle Beitr√§ge ansehen</a>
  </section>
  <section class="card-container women-container">
    <div class="card women-card" style="width: 20rem;">
      <div class="card-body">
        <img src="./images/woman.png" alt="Woman" class="card-img-top"/>
      </div>
    </div>
  </section>

</p>