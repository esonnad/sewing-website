            <li class="nav-item" id="login-nav">
              <a class="nav-style" href="/auth/login">Login</a>
            </li>
            {{/unless}}
            {{#if isConnected}}
            <li class="nav-item" id="logout-nav">
              <a class="nav-style" href="/auth/logout">Logout</a>
            </li>
            {{/if}}
            {{#if isAdmin}}
            {{!-- <li class="nav-item">
              <a class="nav-style" href="/admin-page">Admin Page</a>
            </li> --}}
            <li class="nav-item">
              <a class="nav-style" href="/admin">Admin Page</a>
            </li>
            {{/if}}
            {{#if isStudent}}
            <li class="nav-item">
              <a class="nav-style" href="/student">Student Page</a>
            </li>
            </li>
            {{/if}}

          </ul>
        </div>
      </nav>



    </div>

    <div id="border-container"></div>
  </section>

  <div class="body-container">
    {{{body}}}
