  <script>
    $(document).ready(function () {

      $(function () {
        var availableTags = [
          {{#each allStudents }}
      "{{this.name}}, {{this.id}}",
        {{/each}} ];
    $(".tags").autocomplete({
      source: availableTags
    });
  } );
});
  </script>
</head>

<body>

  <section id="header-container">
